				<option value="low">Low</option>
				<option value="medium">Medium</option>
				<option value="hight" selected="">Hight</option>
				<option value="ultra">Ultra</option>
			</select></div>

			<div><label>Video Brightness</label><input type="range" min="0" max="1" step="0.01"  /></div>
			<div><label>Mouse Sensitivity</label><input type="range" min="0" max="1" step="0.01"  /></div>
			<div><label>Effect Volume</label><input type="range" min="0" max="1" step="0.01" cvar="audio.volume.master" /></div>
			<div><label>Music Volume</label><input type="range" min="0" max="1" step="0.01" cvar="audio.volume.master" /></div>

			<div><label>Network Connection</label>
			<select name="network">
				<option value="modem">Modem</option>
				<option value="isdn">ISDN</option>
				<option value="dsl" selected="">DSL</option>
			</select>
			</div>			<div><label>Bla</label><input type="checkbox" /></div>
