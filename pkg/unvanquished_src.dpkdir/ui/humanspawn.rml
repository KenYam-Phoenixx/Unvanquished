<rml>
	<head>
		<title>Help</title>
		<link type="text/template" href="templates/unvwindow.rml" />
		<style>
			body
			{
				width: 70%;
				height: 50%;
				margin: auto;
			}

			div
			{
				position: relative;
				left: 20%;
				float: left;
			}
			div#list
			{
				width: 30%;
				height: 100%;
			}

			div#info
			{
				width: 70%;
				height: 100%;
				overflow-y: auto;
			}

			datagrid
			{
				width: 100%;
				float: left;
			}

			datagridrow:selected
			{
				background: rgba(111,111,111,111);
			}
			div#buttons
			{
				position: absolute;
				height: 3%;
				width: 100%;
				bottom: 20%;
			}
			button
			{
				float: right;
				font-size: 18;
			}
			button:first-child
			{
				margin-right: 60px;
			}
		</style>
	</head>
	<body id="humanspawn" onShow="buildDS humanSpawnItems default">
		<div id="list">
		<datagrid id="team"  source="humanSpawnItems.default">
			<col fields="name" width="100%"/>
		</datagrid>
		</div>
		<div id="info">
		<datasource_single source="humanSpawnItems.default" fields="description" targetid="team" />
		</div>
		<div id='buttons'>
			<button onClick="execDS humanSpawnItems default">Spawn</button>
			<button onClick="hide humanspawn">Cancel</button>
		</div>
	</body>
</rml>
